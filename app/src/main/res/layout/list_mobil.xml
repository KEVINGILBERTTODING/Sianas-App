<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:background="@color/black"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNamaMobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/icCard"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="NAMA MOBIL"
                android:fontFamily="@font/popsem"/>

            <TextView
                android:id="@+id/tvNoPol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/icCard"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_below="@id/tvNamaMobil"
                android:text="NO POLISI"
                android:fontFamily="@font/popsem"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_below="@id/tvNoPol"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/icCard"
                android:text="Status"
                android:fontFamily="@font/popsem"/>

            <ImageView
                android:layout_width="@dimen/_59sdp"
                android:layout_height="@dimen/_59sdp"
                android:id="@+id/icCard"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/baseline_directions_car_filled_24"
                app:tint="@color/grey" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>