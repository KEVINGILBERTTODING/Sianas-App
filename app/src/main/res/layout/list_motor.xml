<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:contentPadding="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNamaMotor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAMA MOTOR"
                android:layout_toLeftOf="@id/icMotor"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/popsem"/>

            <TextView
                android:id="@+id/tvNoPol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNamaMotor"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="NO POLISI"
                android:layout_toLeftOf="@id/icMotor"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/popsem"/>

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerVertical="true"
                android:id="@+id/icMotor"
                android:layout_alignParentRight="true"
                android:src="@drawable/baseline_electric_bike_24"
                app:tint="@color/grey" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>